@model SpendMoneyVM;
@{
    ViewData["Title"] = "قائمة المصروفات";
    string AddStatus = ViewBag.AddStatus ?? "";
    string UpdateStatus = ViewBag.UpdateStatus ?? "";
}

<!-- Content Page -->
<div class="container-xxl flex-grow-1 container-p-y">
    <h3>قائمة المصروفات</h3>
    <div class="card p-4">
        <div class="d-flex card-header">
            <div class="col-md-12">
                <a class="btn btn-dark" asp-controller="Create" asp-action="SpendMoney">
                    <i class="bx bx-plus"></i>
                    <span class="d-lg-inline-block">
                        صرف مبلغ لشخص
                    </span>
                </a>
                <button class="btn btn-outline-dark float-end" id="PrintTableBtn">
                    <i class="bx bx-printer"></i>
                    <span class="d-lg-inline-block">طباعة الجدول</span>
                </button>
            </div>
        </div>

        <div class="col-md-3">
            <div class="row mb-2">
                <h6>بحث بأسم المستخدم</h6>
                <select id="NamesList" class="select2 form-select">
                    <option value="">بحث بأسم</option>
                    @foreach (var item in Model.NamesList)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
            </div>
            <div class="row mb-3">
                <h6>بحث بسنة محدد</h6>
                <select id="YearList" class="select2 form-select">
                    <option value="">بحث بسنة معينة</option>
                    @foreach (var item in Model.YearList)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
            </div>
            <button id="Searchbtn" class="btn btn-outline-dark">
                <i class="bx bx-glasses"></i>
                <span class="d-lg-inline-block">
                    بحث
                </span>
            </button>
        </div>
        <div class="card-body">
            <div class="table-responsive mt-5">
                <table id="userTable" class="table table-sm table-bordered table-striped justify-content-xl-center dataTables_wrapper" style="width:100%">
                    <thead>
                        <tr>
                            <th>الاسم</th>
                            <th>تاريخ الصرف</th>
                            <th>مبلغ الصرف</th>
                            <th>الصرف لسبب</th>
                            <th>الأجراء</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>

    </div>

</div>


