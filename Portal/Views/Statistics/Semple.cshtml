    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/buttons/2.4.2/css/buttons.bootstrap5.min.css">

}

@section Scripts {
    <script src="~/assets/vendor/libs/sweetalert2/sweetalert2.js"></script>
    <script src="~/assets/vendor/libs/datatables/jquery.dataTables.js"></script>
    <script src="~/assets/vendor/libs/select2/select2.js"></script>
    <script src="~/js/printThis.min.js"></script>
    <script>
        $(document).ready(function () {

            $('.select2').select2({
                allowClear: true,
                placeholder: "أختيار من القائمة"
            });
            $('#YearList').select2({
                allowClear: true,
                placeholder: "أختيار من القائمة",
                dir: "rtl",
            });

            $('#YearList').on('change', function () {
                var selectedYear = $(this).val();
                var url = '@Url.Action("Semple", "Statistics")?StatisticsYear=' + selectedYear;
                window.location.href = url;
            });
            $('#YearList').on('select2:unselecting', function () {
                var url = '@Url.Action("Semple", "Statistics")';
                window.location.href = url
            });




            //PersonsBalanceDataTable
            var table = $('#PersonsBalanceDataTable').DataTable({
                lengthChange: false,
                buttons: [
                    {
                        extend: 'csv',
                        split: ['pdf', 'excel'],
                    }
                ],
                responsive: true,
                autoWidth: false,
                paging: false,
                language: {
                    "sProcessing": "جاري التحميل...",
                    "sLengthMenu": "إظهار _MENU_ المدخلات",
                    "sZeroRecords": "لا يوجد سجلات مطابقة",
                    "sInfo": "إظهار _START_ إلى _END_ من أصل _TOTAL_ مدخل",
                    "sInfoEmpty": "يعرض 0 إلى 0 من أصل 0 سجل",
                    "sInfoFiltered": "(منتقاة من مجموع _MAX_ مُدخل)",
                    "sInfoPostFix": "",
                    "sSearch": "ابحث:",
                    "sUrl": "",
                    "oPaginate": {
                        "sFirst": "الأول",
                        "sPrevious": "السابق",
                        "sNext": "التالي",
                        "sLast": "الأخير"
                    }
                },
                columnDefs: [{ className: "dt-center", targets: [0, 1, 2, 3, 4] }],
                // if last column is has - value then set it to red color
                createdRow: function (row, data, dataIndex) {
                    if (data[4] < 0) {
                        $(row).find('td:eq(4)').css('color', 'red');
                        // add ريال to the value of the last column
                        $(row).find('td:eq(4)').text(data[4] + " ريال");
                    }
                }
            });
            $('#PrintTableBtn').on('click', function () {
                // Get the DataTable instance
                var table = $('#PersonsBalanceDataTable').clone();

                // set rtl direction
                table.attr('dir', 'rtl');

                // set first column to 25% width
                table.find('th:first-child, td:first-child').css('width', '25%');

                // // set last column to 25% width
                // table.find('th:last-child, td:last-child').css('width', '40%');

                var tit = "رصيد جميع الأشخاص";

                // print this table
                table.printThis()
            });

            $('#ShowPersonsBalanceDataBtn').on('click', function () {
                var PersonsBalanceCardBody = document.getElementById('PersonsBalanceCardBody');
                if (PersonsBalanceCardBody.style.display === "none") {
                    PersonsBalanceCardBody.style.display = "block";
                    $('#ShowPersonsBalanceDataBtn').text('إخفاء البيانات');
                    // chenge btn class to btn-outline-warning
                    $('#ShowPersonsBalanceDataBtn').removeClass('btn-outline-warning').addClass('btn-outline-danger');
                } else {
                    PersonsBalanceCardBody.style.display = "none";
                    $('#ShowPersonsBalanceDataBtn').text('عرض البيانات');
                    // chenge btn class to btn-outline-warning
                    $('#ShowPersonsBalanceDataBtn').removeClass('btn-outline-danger').addClass('btn-outline-warning');




                }

            });






        });

    </script>
}
