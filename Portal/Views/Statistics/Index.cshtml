                                gradientToColors: undefined,
                                opacityFrom: 0,
                                opacityTo: 0.9,
                                stops: [0, 30, 70, 100]
                            }
                        },
                        xaxis: {
                            labels: {
                                show: false
                            },
                            axisBorder: {
