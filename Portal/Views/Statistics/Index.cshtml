@using Portal.Models.ViewModels;
@model StatisticsVM;
@{
    ViewData["Title"] = "الصفحة الرئيسية";

}

<!-- Content Page -->
<div class="container-xxl flex-grow-1 container-p-y">
    <div class="card p-4">

        <div class="card-body">
            <div class="row">
                <div class="divider divider-info">
                    <div class="divider-text">أحصائيات السنة الحالية - @DateTime.Now.Year</div>
                </div>
                <div class="col-6 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div class="d-flex align-items-center gap-3">
                                    <div class="avatar">
                                        <span class="avatar-initial bg-label-success rounded-circle">
                                            <i class="bx bx-dollar fs-4"></i>
                                        </span>
                                    </div>
                                    <div class="card-info">
                                        <h4 class="card-title mb-0 me-2">@Model.ReceivePaymentsAmountCount ريال</h4>
                                        <small class="text-muted">جميع المبالغ في سنة @DateTime.Now.Year</small>
                                    </div>
                                </div>
                                <div id="incomeChart"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-6 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div class="d-flex align-items-center gap-3">
                                    <div class="avatar">
                                        <span class="avatar-initial bg-label-danger rounded-circle">
                                            <i class="bx bx-dollar fs-4"></i>
                                        </span>
                                    </div>
                                    <div class="card-info">
                                        <h4 class="card-title mb-0 me-2">@Model.ReceivePaymentsAmountCount ريال</h4>
                                        <small class="text-muted">جميع مروفات سنة @DateTime.Now.Year</small>
                                    </div>
                                </div>
                                <div id="incomeChart2"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Latest Update -->
                <div class="col-md-6 col-lg-6 col-xl-4 col-xl-4 mb-2">
                    <div class="card">
                        <div class="card-header d-flex align-items-center justify-content-between mb-3">
                            <h5 class="card-title mb-0">أحصائيات الأضافات</h5>
                            <div class="dropdown">
                                <button class="btn btn-sm btn-outline-secondary dropdown-toggle"
                                        type="button"
                                        id="orederStatistics"
                                        data-bs-toggle="dropdown"
                                        aria-haspopup="true"
                                        aria-expanded="false">
                                    @if (Model.AddCountYear is not null)
                                    {
                                        @Model.AddCountYear
                                    }
                                    else
                                    {
                                        @DateTime.Now.Year
                                    }
                                </button>
                                <div class="dropdown-menu dropdown-menu-end" aria-labelledby="orederStatistics">
                                    @for (int i = 2019; i <= 2028; i++)
                                    {
                                        <a onclick="AddCount(@i)" class="dropdown-item year-item">@i</a>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <ul class="p-0 m-0">
                                <li class="d-flex mb-4">
                                    <div class="avatar avatar-sm flex-shrink-0 me-3">
                                        <span class="avatar-initial rounded-circle bg-label-primary">
                                            <i class="bx bx-user-plus"></i>
                                        </span>
                                    </div>
                                    <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">
                                        <div class="me-2">
                                            <p class="mb-0 lh-1">الأسماء الجديدة</p>
                                        </div>
                                        <div class="item-progress">@Model.NamesCountInCertainYear</div>
                                    </div>
                                </li>
                                <li class="d-flex mb-4">
                                    <div class="avatar avatar-sm flex-shrink-0 me-3">
                                        <span class="avatar-initial rounded-circle bg-label-info">
                                            <i class="bx bx-pie-chart-alt"></i>
                                        </span>
                                    </div>
                                    <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">
                                        <div class="me-2">
                                            <p class="mb-0 lh-1">الأسباب الجديدة</p>
                                        </div>
                                        <div class="item-progress">@Model.ReasonsCountInCertainYear</div>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <!--/ Latest Update -->
            </div>
            <div class="row">

                <!-- Money incomming and out Analytics-->
                <div class="col-lg-12 col-md-12 mb-4">
                    <div class="divider divider-success">
                        <div class="divider-text">المبالغ المستقبلة</div>
                    </div>
                    <div class="card">

                        <div class="card-header d-flex justify-content-between align-items-center">
                            @if (Model.RPYearSelected)
                            {
                                <h5 class="card-title mb-0 text-bg-light">الأحصائيات المبالغ المستقبلة لعام @Model.RPFirstYear الى @Model.RPSecondYear</h5>

                            }
                            else
                            {
                            <h5 class="card-title mb-0">الأحصائيات  المبالغ المستقبلة لعام @(DateTime.Now.Year - 1) الى @DateTime.Now.Year</h5>
                            }
                            <div class="btn-group">
                                <button type="button"
                                        class="btn btn-label-success dropdown-toggle"
                                        data-bs-toggle="dropdown"
                                        aria-haspopup="true"
                                        aria-expanded="false">
                                    مقارنة بين سنتين
                                </button>
                                <div class="dropdown-menu dropdown-menu-end w-px-300">
                                    <form class="p-4">
                                        <div class="mb-3">
                                            <label class="form-label">من</label>
                                            <select name="RPFirstYear" class="form-select" data-allow-clear="true">
                                                @foreach (var item in @Model.FromFirstYearToLastYearInReceivePayments)
                                                {
                                                    <option value="@item">@item</option>
                                                }
                                            </select>
                                        </div>
                                        <div class="mb-3">
                                            <label for="exampleDropdownFormPassword1" class="form-label">الى</label>
                                            <select name="RPSecondYear" class="form-select form-select" data-allow-clear="true">
                                                @foreach (var item in @Model.FromFirstYearToLastYearInReceivePayments)
                                                {
                                                    <option value="@item">@item</option>
                                                }
                                            </select>
                                        </div>
                                        <button type="submit"  class="btn btn-primary">عرض</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="card-body pb-2">
                            <div id="analyticsBarChart"></div>
                        </div>
                    </div>
                    <div class="divider divider-warning">
                        <div class="divider-text">المبالغ المصروفة</div>
                    </div>
                    <div class="card">

                        <div class="card-header d-flex justify-content-between align-items-center">
                            @if (Model.SMYearSelected)
                            {
                                <h5 class="card-title mb-0 text-bg-dark">احصائيات االمبالغ المصروفة لعام @Model.SMFirstYear الى @Model.SMSecondYear</h5>

                            }
                            else
                            {
                                <h5 class="card-title mb-0">احصائيات المبالغ المصروفة لعام @(DateTime.Now.Year - 1) الى @DateTime.Now.Year</h5>
                            }
                            <div class="btn-group">
                                <button type="button"
                                        class="btn btn-label-warning dropdown-toggle"
                                        data-bs-toggle="dropdown"
                                        aria-haspopup="true"
                                        aria-expanded="false">
                                    مقارنة بين سنتين
                                </button>
                                <div class="dropdown-menu dropdown-menu-end w-px-300">
                                    <form class="p-4">
                                        <div class="mb-3">
                                            <label class="form-label">من</label>
                                            <select name="SMFirstYear" class="form-select" data-allow-clear="true">
                                                @foreach (var item in @Model.FromFirstYearToLastYearInSpendMoney)
                                                {
                                                    <option value="@item">@item</option>
                                                }
                                            </select>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">الى</label>
                                            <select name="SMSecondYear" class="form-select form-select" data-allow-clear="true">
                                                @foreach (var item in @Model.FromFirstYearToLastYearInSpendMoney)
                                                {
                                                    <option value="@item">@item</option>
                                                }
                                            </select>
                                        </div>
                                        <button type="submit" class="btn btn-primary">عرض</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="card-body pb-2">
                            <div id="analyticsBarChart2"></div>
                        </div>
                    </div>


                </div>
            </div>

        </div>
    </div>
</div>

@section Stylesheet{
    <link rel="stylesheet" href="~/assets/vendor/libs/select2/select2.css">
    <!-- Vendors CSS -->
    <link rel="stylesheet" href="~/assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.css" />
    <link rel="stylesheet" href="~/assets/vendor/libs/typeahead-js/typeahead.css" />
    <link rel="stylesheet" href="~/assets/vendor/libs/apex-charts/apex-charts.css" />

    <!-- Page CSS -->
    <!-- Helpers -->
    <script src="~/assets/vendor/js/helpers.js"></script>
